<Window x:Class="MindtheMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mind the Music" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="🎵 Mind the Music Controller" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />
            <Button Content="Start Monitoring" Click="StartButton_Click" Height="40" />
            <TextBlock x:Name="StatusTextBlock" Text="Status: Idle" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
